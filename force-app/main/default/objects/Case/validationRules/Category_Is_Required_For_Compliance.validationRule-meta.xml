<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Category_Is_Required_For_Compliance</fullName>
    <active>true</active>
    <description>Validation created due to custom compliance page.</description>
    <errorConditionFormula>AND(ISPICKVAL(Category__c, &quot;&quot;), RecordType.Name = &#39;Compliance Case&#39;)</errorConditionFormula>
    <errorDisplayField>Category__c</errorDisplayField>
    <errorMessage>Please select a Category</errorMessage>
</ValidationRule>
